};
int main()
{
	CandyBar snack[3] = {
		{"Mocha Munch", 2.3, 350},
	{"Defu", 2.9, 120},
	{"Naitang", 1.5, 220 },
	};
	cout << "brand name: " << snack[0].brand <<"\t"<< snack[1].brand <<"\t"<< snack[2].brand << endl;
	cout<< "weight: " << snack[0].weight << "\t" << snack[1].weight << "\t" << snack[2].weight << endl;
	cout<< "calory: " << snack[0].cal << "\t" << snack[1].cal << "\t" << snack[2].cal << endl;
